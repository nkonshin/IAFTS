<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IAFTS.Views.InfoDialog"
        Width="350" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Title="Уведомление">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
        <TextBlock x:Name="MessageText" Text="" FontSize="16" TextAlignment="Center" Margin="0,16,0,0"/>
        <Button Width="90" Height="32"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="OK"
                Click="Ok_Click"
                Background="#2DB874"
                Foreground="White"
                CornerRadius="20"
                FontWeight="Bold"
                FontSize="14"/>
    </StackPanel>
</Window>
